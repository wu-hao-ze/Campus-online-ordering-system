.background {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: -1;
}

.contains {
  font-family: STxingkai;
  color: rgb(209, 27, 233);
  font-size: 35rpx;
  /* margin: 15rpx; */
}

.release {
  font-family: STxingkai;
  color: #fff;
  background: #f95807;
  margin: 0 9%;
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  position: fixed;
}

.score {
  height: 150rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.score-left {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 50rpx;
  width: 50%;
  justify-content: center;
}

.score-left image {
  height: 100rpx;
  width: 100rpx;
}

.score-right {
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 90%;
}

.score-right image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

.score_text {
  font-family: STxingkai;
  width: 150rpx;
  text-align: center;
  color: #3055cf;
}

.textarea {
  position: relative;
  /* margin-top: 20rpx; */
  height: 400rpx;
  width: 90%;
  padding-left: 50rpx;
  /* border-bottom: 1rpx #e6e6e6 solid; */
}

.textarea textarea {
  height: 200rpx;
  width: 95%;
  border: 1rpx solid #09e464;
  border-radius: 15rpx;
  color: rgb(2, 14, 13);
  font-size: 40rpx;
  font-family: STxingkai;
}

.textarea-text {
  color: rgb(2, 14, 13);
  font-size: 34rpx;
}

.textarea .title {
  margin: 10rpx 0;
}